<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp">

    <!--<ProgressBar android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:layout_editor_absoluteY="0dp"
                 tools:layout_editor_absoluteX="0dp"
                 android:id="@+id/loader" />-->

    <ImageView android:layout_width="77dp"
               android:layout_height="88dp"
               android:src="@mipmap/backoffice_disconnected"
               android:id="@+id/link_status_img"
               android:layout_marginTop="40dp"
               app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="44dp" android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toTopOf="@+id/drawer1" app:layout_constraintVertical_bias="0.043"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Status de connexion"
              android:id="@+id/link_status_txt"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="76dp" app:layout_constraintEnd_toStartOf="@+id/link_status_img"
              android:layout_marginEnd="88dp" android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toTopOf="@+id/drawer1" app:layout_constraintVertical_bias="0.008"
              android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintHorizontal_bias="0.478"/>

    <Switch android:layout_width="257dp"
            android:layout_height="47dp"
            android:text="Porte du haut"
            android:id="@+id/drawer2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="212dp" app:layout_constraintTop_toTopOf="parent"/>

    <Switch android:layout_width="257dp"
            android:layout_height="47dp"
            android:text="Porte du bas"
            android:id="@+id/drawer1"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/drawer2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintEnd_toEndOf="parent"/>

    <WebView android:layout_width="334dp"
             android:layout_height="219dp"
             android:id="@+id/cameraView"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginTop="304dp" app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintHorizontal_bias="0.506" app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton android:layout_width="132dp"
                 android:layout_height="64dp"
                 android:src="@mipmap/camera_running"
                 android:background="@null"
                 android:id="@+id/cameraButton"
                 android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toTopOf="@+id/cameraView" app:layout_constraintVertical_bias="0.559"
                 app:layout_constraintEnd_toEndOf="@+id/cameraView"
                 app:layout_constraintStart_toStartOf="@+id/cameraView"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline" app:layout_constraintGuide_begin="-8dp"
                                                android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>