<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="16dp"
        tools:layout_editor_absoluteX="16dp">

    <!--<ProgressBar android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 tools:layout_editor_absoluteY="0dp"
                 tools:layout_editor_absoluteX="0dp"
                 android:id="@+id/loader" />-->

    <Switch android:layout_width="257dp"
            android:layout_height="47dp"
            android:text="Porte du haut"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            android:id="@+id/drawer2"
            android:layout_marginTop="84dp"
            app:layout_constraintTop_toTopOf="@+id/drawer1" />

    <Switch android:layout_width="257dp"
            android:layout_height="47dp"
            android:text="Porte du bas"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.464"
            android:id="@+id/drawer1"
            android:layout_marginTop="156dp"
            app:layout_constraintTop_toTopOf="parent" />

    <WebView android:layout_width="332dp"
             android:layout_height="221dp"
             android:layout_marginBottom="52dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintHorizontal_bias="0.5"
             app:layout_constraintEnd_toEndOf="parent"
             android:id="@+id/cameraView" />

    <ImageButton android:layout_width="132dp"
                 android:layout_height="64dp"
                 android:src="@mipmap/camera_running"
                 android:background="@null"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginBottom="80dp"
                 app:layout_constraintBottom_toBottomOf="parent"
                 app:layout_constraintHorizontal_bias="0.5"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:id="@+id/cameraButton" />

</androidx.constraintlayout.widget.ConstraintLayout>